#!/usr/bin/env bash
set -eo pipefail

# Configuration
ROOT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )/.." >/dev/null 2>&1 && pwd )"
BIN_DIR="${ROOT_DIR}/bin"
SOURCE_DIR="${ROOT_DIR}/server"

# Autodiscover test files
env python3 -m unittest discover \
  -s "${SOURCE_DIR}" \
  -t "${SOURCE_DIR}/.." \
  -p "*_test.py"
